{
  "manifest_version": 2,
  "name": "Media Quick Downloader",
  "version": "1.1",
  "description": "Detects media playing on pages and offers quick download.",
  "permissions": [
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_title": "Media Quick Downloader",
    "default_popup": "popup.html"
  },
  "icons": { "48": "icon48.png" }
}
